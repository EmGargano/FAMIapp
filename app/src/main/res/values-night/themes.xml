<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/actionbar_nightmode</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorSecondary">@color/colorPrimaryDark_nightmode</item>
        <item name="colorAccent">@color/colorPrimaryDark_nightmode</item>
<!--        <item name="actionBarStyle">@style/ActionBarStyle</item>-->
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="android:textSize">18sp</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!--    Style for drawer toggle on toolbar-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

<!--    Style for changing title text in action bar for API < 28.   -->
    <!--<style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>
    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white_nightmode</item>
        <item name="titleTextColor">@color/white_nightmode</item>
    </style>-->


<!--    Style for changing title text in action bar for API => 28.   -->
    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white_nightmode</item>
    </style>


    <style name="AppTheme.NavDrawer" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">15sp</item>
        <!-- This is the menu item text color. -->
        <item name="android:textColorPrimary">@color/whiteMedium_nightmode</item>
        <!-- This is the menu icon color. -->
        <item name="android:textColorSecondary">@color/whiteMedium_nightmode</item>
        <!-- This is the selected color for text and icon. -->
        <item name="colorPrimary">@color/colorPrimaryDark_nightmode</item>
    </style>

    <style name="ButtonTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorButtonNormal">@color/colorPrimary_nightmode</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonThemeNoBorder" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textSize">14sp</item>
    </style>

<!--    Style for FAB buttons, menu and labels-->
    <style name="fabButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#2C2C2C</item>
        <item name="fab_colorNormal">@color/white_nightmode</item>
        <item name="fab_colorPressed">@color/divider</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:textColor">@color/white_nightmode</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="menu_labels_margin">4dp</item>
        <item name="menu_labels_showAnimation">@anim/jump_from_down</item>
        <item name="menu_labels_hideAnimation">@anim/jump_to_down</item>
    </style>

    <style name="fabMenuStyle">
        <item name="fab_shadowColor">#444</item>
        <item name="menu_buttonSpacing">2dp</item>
        <item name="menu_animationDelayPerItem">25</item>
        <item name="menu_backgroundColor">@color/grey</item>
        <item name="menu_colorNormal">@color/colorPrimary_nightmode</item>
        <item name="menu_colorPressed">@color/colorPrimaryDark_nightmode</item>
    </style>


    <style name="AppTheme.BottomNavigation">
        <item name="android:textSize">15sp</item>
        <item name="itemIconTint">@drawable/bottom_color_selector_nightmode</item>
        <item name="itemTextColor">@drawable/bottom_color_selector_nightmode</item>
    </style>


    <style name="ChatLayout">
        <item name="background">@color/white</item>

    </style>

</resources>