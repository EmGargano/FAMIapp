<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anagrafica_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_picture"
            android:layout_width="184dp"
            android:layout_height="183dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:civ_border_width="0dp"
            app:srcCompat="@drawable/myinfo"
            tools:ignore="ContentDescription" />

        <ProgressBar
            android:id="@+id/progressProfilePicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />


        <android.support.v7.widget.CardView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text="@string/nome_cognome"
                    android:fontFamily="@font/open_sans_light"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nome"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/text_dimension_edit" />

                <TextView
                    android:id="@+id/display_cognome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/cognome"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/text_dimension_edit" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:fontFamily="@font/open_sans_light"
                android:text="@string/genere"
                android:textAlignment="textStart" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="start">

                <RadioButton
                    android:id="@+id/display_genderM"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:enabled="false"
                    android:text="@string/genere_maschio" />

                <RadioButton
                    android:id="@+id/display_genderF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/genere_femmina" />
            </RadioGroup>

        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/open_sans_light"
                android:text="@string/data_nascita"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/display_data_nasc"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:hint="@string/esempio_data"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_dimension_edit" />

        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/container4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/open_sans_light"
                android:text="@string/provenienza"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/display_citta_provenienza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/citta_provenienza"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_dimension_edit" />

            <TextView
                android:id="@+id/display_stato_provenienza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/stato_provenienza"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_dimension_edit" />

        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/container5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/open_sans_light"
                android:text="@string/num_telefono"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/display_num_telefonico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/num_telefono"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_dimension_edit" />

        </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/modify_butt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/open_sans_light"
            android:text="@string/mod_anagrafica"
            android:textColor="@android:color/white" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>