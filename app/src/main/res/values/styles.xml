<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/window_background</item>
        <item name="colorPrimaryDark">@color/statubar</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="android:textSize">18sp</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

<!--    Style for drawer toggle on toolbar-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="TextAppearance.Design.Snackbar.Message" parent="android:TextAppearance" tools:override="true">
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="AppTheme.NoActionbar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    Style for changing title text in action bar for API => 28.   -->
    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/black</item>
    </style>

<!--    Style to show QR code-->
    <style name="Theme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="AppTheme.NavDrawer" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">15sp</item>
        <!-- This is the menu item text color. -->
        <item name="android:textColorPrimary">@color/grey</item>
        <!-- This is the menu icon color. -->
        <item name="android:textColorSecondary">@color/grey</item>
        <!-- This is the selected color for text and icon. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.BottomNavigation">
        <item name="android:textSize">15sp</item>
        <item name="itemIconTint">@drawable/bottom_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_color_selector</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonThemeNoBorder" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textSize">14sp</item>
    </style>

<!--    Styles for FAB buttons, menu and labels-->
    <style name="fabButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/white</item>
        <item name="fab_colorPressed">@color/divider</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="fabMenuStyle">
        <item name="menu_labels_margin">4dp</item>
        <item name="fab_shadowColor">#444</item>
        <item name="menu_buttonSpacing">2dp</item>
        <item name="menu_animationDelayPerItem">25</item>
        <item name="menu_backgroundColor">@color/grey</item>
        <item name="menu_colorNormal">@color/colorPrimary_nightmode</item>
        <item name="menu_colorPressed">@color/colorPrimaryDark_nightmode</item>
    </style>

    <!--Style for autoscroll fab on chat-->
    <style name="NoBorder" parent="@style/Widget.Design.FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <!-- <item name="android:windowBackground">@drawable/launch_screen</item>-->
    </style>

</resources>
